<h1>Tasks</h1>
<ul>
  <% @tasks.each do |task| %>
    <li>
      <%= link_to task.title, task_path(task) %>
      <%= link_to "Edit", edit_task_path(task) %>
      <%= form_with(url: task_path(task), method: :delete) do |f| %>
        <%= f.submit "Delete", data: { confirm: "Are you sure?" } %>
      <% end %>
    </li>
  <% end %>
</ul>
<%= link_to "New Task", new_task_path %>
